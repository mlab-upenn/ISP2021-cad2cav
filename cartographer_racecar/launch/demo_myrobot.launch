<launch>
  <param name="/use_sim_time"
    value="true" />

  <include file="$(find cartographer_racecar)/launch/racecar.launch" />

  <node name="rviz"
    pkg="rviz"
    type="rviz"
    required="true"
    args="-d $(find cartographer_racecar)/configuration_files/demo_2d.rviz" />

  <node name="playbag"
    pkg="rosbag"
    type="play"
    args="--clock $(arg bag_filename)">
    <remap from="scan_1"
      to="scan" />
    <remap from="tf"
      to="tf_old" />
  </node>

  <node pkg="tf"
    type="tf_remap"
    name="tf_remapper"
    output="screen">
    <rosparam param="mappings">
      [{old: racecar1/base_link, new: base_link}, {old: racecar1/laser, new: laser}]
    </rosparam>
  </node>

</launch>
